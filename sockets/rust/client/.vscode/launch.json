{ //launch.json
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'client'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=client",
                    "--package=client"
                ],
                "filter": {
                    "name": "client",
                    "kind": "bin"
                }
            },
            "args": [
                "localhost",
                "12345",
                "rust"
            ],
            "program": "${workspaceFolder}/target/debug/client",
            "cwd": "${workspaceFolder}/target/debug/",
            "sourceLanguages": [
                "rust"
            ]
        },
    }